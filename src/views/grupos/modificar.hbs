<div class="container p-4">
    <div class="row justify-content-center">
        <h1>Modificar grupo</h1>
    </div>
    <div class="row justify-content-center mt-4">
        <div class="col-md-4">
            <form action="/grupos/modificar/{{grupo.idgrupo}}"  method="POST">
                <div class="form-group">
                    <input type="text" class="form-control" name="num_grupo" placeholder="Numero de grupo" value="{{grupo.num_grupo}}" />
                </div>
                <div class="form-group">
                    <input type="text" class="form-control" name="anio" placeholder="AÃ±o" value="{{grupo.anio}}" />
                </div>
                <div class="form-group">
                    <input type="text" class="form-control" name="ciclo" placeholder="Ciclo" value="{{grupo.ciclo}}" />
                </div>
                <div class="form-group">
                    <select class="form-control" name="idmateria">
                        {{#each lstMaterias}}
                        <option value="{{idmateria}}" {{#eq idmateria ../grupo.idmateria}}selected{{/eq}}>{{materia}}</option>
                        {{/each}}
                    </select>
                </div>
                <div class="form-group">
                    <select class="form-control" name="idprofesor">
                        {{#each lstProfesores}}
                        <option value="{{idprofesor}}" {{#eq idprofesor ../grupo.idprofesor}}selected{{/eq}}>{{nombre}}</option>
                        {{/each}}
                    </select>
                </div>
                <div class="form-group">
                    <button class="btn btn-success btn-block">Guardar cambios</button>
                </div>
            </form>
        </div>
    </div>
</div>