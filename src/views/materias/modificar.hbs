<div class="container p-4">
    <div class="row justify-content-center">
        <h1>Modificar materia</h1>
    </div>
    <div class="row justify-content-center mt-4">
        <div class="col-md-4">
            <form action="/materias/modificar/{{materia.idmateria}}"  method="POST">
                <div class="form-group">
                    <input type="text" class="form-control" name="materia" placeholder="Nombre de la materia" value="{{materia.materia}}" />
                </div>
                <div class="form-group">
                    <button class="btn btn-success btn-block">Guardar cambios</button>
                </div>
            </form>
        </div>
    </div>
</div>